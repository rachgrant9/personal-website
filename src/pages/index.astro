---
import fs from 'node:fs';
import path from 'node:path';

// Read config file
const configPath = path.join(process.cwd(), 'config.txt');
const configContent = fs.readFileSync(configPath, 'utf-8');
const config: Record<string, string> = {};
configContent.split('\n').forEach((line: string) => {
  if (line.trim() && !line.startsWith('#')) {
    const [key, ...valueParts] = line.split('=');
    if (key && valueParts.length) {
      config[key.trim()] = valueParts.join('=').trim();
    }
  }
});

// Read CV file
const cvPath = path.join(process.cwd(), 'cv.txt');
const cvContent = fs.readFileSync(cvPath, 'utf-8');

// Parse CV sections
interface ExperienceItem {
  title: string;
  company: string;
  period: string;
  description: string[];
}

const parseExperience = (cvText: string): ExperienceItem[] => {
  const experiences: ExperienceItem[] = [];
  const experienceSection = cvText.split('## EXPERIENCE')[1]?.split('##')[0] || '';
  const jobs = experienceSection.split('###').filter(j => j.trim());
  
  jobs.forEach(job => {
    const lines = job.split('\n').filter(l => l.trim());
    if (lines.length > 0) {
      const titleLine = lines[0].split('|').map(s => s.trim());
      const periodLine = lines[1]?.replace(/\*/g, '').trim() || '';
      const description = lines.slice(2).filter(l => l.startsWith('-')).map(l => l.substring(1).trim());
      
      experiences.push({
        title: titleLine[0] || '',
        company: titleLine[1] || '',
        period: periodLine,
        description
      });
    }
  });
  
  return experiences;
};

const experiences = parseExperience(cvContent);

// Extract name from CV
const nameMatch = cvContent.match(/# (.+?) - Curriculum Vitae/);
const fullName = nameMatch ? nameMatch[1] : 'Rachel Grant';

// Extract summary
const summaryMatch = cvContent.split('## PROFESSIONAL SUMMARY')[1]?.split('##')[0];
const summary = summaryMatch?.trim() || '';
